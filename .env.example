# Redis Configuration for Audit Queue
REDIS_URL=redis://localhost:6379
# Redis pool configuration (unified settings)
REDIS_POOL_MIN_SIZE=5
REDIS_POOL_MAX_SIZE=20
# Fallback settings (deprecated, use redis_pool_* instead)
# REDIS_MIN_CONNECTIONS=1
# REDIS_MAX_CONNECTIONS=10

# LLM Configuration
LLM_ENDPOINT=http://localhost:8001/v1
# For production: use a real API key, not dummy_key_for_development
LLM_API_KEY=***  # Configure via environment variable
AUDITOR_MODEL_NAME=gpt-4o-mini

# TWS Configuration
TWS_HOST=your-tws-host
TWS_PORT=31111
TWS_USER=your-username
TWS_PASSWORD=***  # Configure via environment variable
TWS_ENGINE_NAME=tws-engine
TWS_ENGINE_OWNER=tws-owner
# WARNING: Setting TWS_VERIFY=false disables SSL verification - potential security risk
TWS_VERIFY=false

# Neo4j Configuration
NEO4J_URI=neo4j://localhost:7687
# For production, consider using encrypted connection: neo4j+s:// or neo4j+ssc://
NEO4J_USER=neo4j
NEO4J_PASSWORD=***  # Configure via environment variable

# Rate Limiting Configuration
# Use separate Redis DB to isolate rate limiting from other data
RATE_LIMIT_STORAGE_URI=redis://localhost:6379/1

# CORS Configuration
# Default secure settings for development
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOW_CREDENTIALS=false

# Cache Configuration
ENABLE_CACHE_SWR=true
CACHE_TTL_JITTER_RATIO=0.1
ENABLE_CACHE_MUTEX=true

# Application Environment
APP_ENV=development
PROJECT_VERSION=1.0.0
TWS_MOCK_MODE=true

# Security Settings
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_secure_admin_password
SECRET_KEY=your_very_secure_random_string_at_least_32_chars_long

# Logging Configuration
LOG_FORMAT=json
LOG_SENSITIVE_DATA_REDACTION=true
SERVICE_NAME=resync
