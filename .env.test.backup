# Test Environment Configuration
# This file contains test-specific environment variables for comprehensive testing

# Application Environment
APP_ENV=test
APP_ENVIRONMENT=test

# Basic Application Settings
ADMIN_USERNAME=admin
ADMIN_PASSWORD=test123
SECRET_KEY=test_secret_key_for_testing_only_not_secure

# Redis Configuration for Testing
REDIS_URL=redis://localhost:6379/15
REDIS_MIN_CONNECTIONS=1
REDIS_MAX_CONNECTIONS=5

# LLM Configuration for Testing (Mock/Dummy values)
LLM_ENDPOINT=http://localhost:8001/v1
LLM_API_KEY=test_api_key_for_testing_only
LLM_TIMEOUT=30.0
AUDITOR_MODEL_NAME=gpt-3.5-turbo
AGENT_MODEL_NAME=gpt-4o

# TWS Configuration for Testing (Mock mode enabled)
TWS_MOCK_MODE=true
TWS_HOST=localhost
TWS_PORT=31111
TWS_USER=test_user
TWS_PASSWORD=test_password
TWS_ENGINE_NAME=tws-engine
TWS_ENGINE_OWNER=tws-owner
TWS_REQUEST_TIMEOUT=10.0

# Database Configuration for Testing (Mock values)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=test_user
NEO4J_PASSWORD=test_password

# Connection Pool Settings for Testing
DB_POOL_MIN_SIZE=1
DB_POOL_MAX_SIZE=3
REDIS_POOL_MIN_SIZE=1
REDIS_POOL_MAX_SIZE=3
HTTP_POOL_MIN_SIZE=1
HTTP_POOL_MAX_SIZE=5

# Cache Configuration for Testing
CACHE_HIERARCHY_L1_MAX_SIZE=100
CACHE_HIERARCHY_L2_TTL=30
CACHE_HIERARCHY_L2_CLEANUP_INTERVAL=10
CACHE_HIERARCHY_NUM_SHARDS=2
CACHE_HIERARCHY_MAX_WORKERS=1

# Rate Limiting for Testing
RATE_LIMIT_PUBLIC_PER_MINUTE=1000
RATE_LIMIT_AUTHENTICATED_PER_MINUTE=10000
RATE_LIMIT_CRITICAL_PER_MINUTE=500

# CORS Configuration for Testing
CORS_ALLOWED_ORIGINS=[\
http://localhost:3000\, \http://localhost:8000\, \http://127.0.0.1:3000\]

# Logging for Testing
LOG_LEVEL=WARNING

# Migration and Feature Flags for Testing
MIGRATION_USE_NEW_CACHE=true
MIGRATION_USE_NEW_TWS=true
MIGRATION_USE_NEW_RATE_LIMIT=true
MIGRATION_ENABLE_METRICS=true

# Robust Cache Configuration for Testing
ROBUST_CACHE_MAX_ITEMS=1000
ROBUST_CACHE_MAX_MEMORY_MB=10
ROBUST_CACHE_EVICTION_BATCH_SIZE=10
ROBUST_CACHE_ENABLE_WEAK_REFS=true
ROBUST_CACHE_ENABLE_WAL=false
